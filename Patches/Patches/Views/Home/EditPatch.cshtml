@model Patch

<script type="text/javascript" src="js/script.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Edit Patch";
}

<h4>Edit Patch</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditPatch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idpatches" />
            <div class="form-group">
                <label asp-for="BoxNo" class="control-label"></label>
                <input asp-for="BoxNo" class="form-control" />
                <span asp-validation-for="BoxNo" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="OfficeId" class="control-label"></label>
                    <input asp-for="OfficeId" class="form-control" />
                    <span asp-validation-for="OfficeId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PatchNo" class="control-label"></label>
                    <input asp-for="PatchNo" class="form-control" />
                    <span asp-validation-for="PatchNo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PatchSlot" class="control-label"></label>
                    <input asp-for="PatchSlot" class="form-control" />
                    <span asp-validation-for="PatchSlot" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RoomNo" class="control-label"></label>
                <input asp-for="RoomNo" class="form-control" />
                <span asp-validation-for="RoomNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <h3></h3>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                    @*<a asp-action="EditPatch" class="btn btn-primary btn-block"><i class="fa fa-table"></i> Submit </a>*@
                    <a asp-action="AddPatch" class="btn btn-primary btn-block"><i class="fa fa-table"></i> add new </a>
                </div>
                <h3></h3>
                <div class="form-group col-md-6">
                    <a asp-action="Index1" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
